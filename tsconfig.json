{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES2018",
    "module": "commonjs",
    "lib": ["ES2019"],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "declarationDir": "dist/types",
    "outDir": "dist/lib",
    "typeRoots": ["node_modules/@types", "src/types"]
  },
  "include": ["src"]
}
